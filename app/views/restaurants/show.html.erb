<h1><%= @restaurant.name %></h1>

<h3>Contact info:</h3>
  <p><%= @restaurant.phone %> <%= @restaurant.address %></p>

<h3>Info:</h3>
  <% if @restaurant.accepts_reservation%>
    <p><%= link_to "Reservations", @restaurant.url %></p>
  <% end %>

  <% if @restaurant.onsite_parking %>
    <p><%= "Onsite Parking Available" %></p>
  <% end %>

  <%= link_to "Menu", menu_path(@restaurant) %>

<h3>Description:</h3>
  <p><%= @restaurant.description %></p>

<h3>Rating: <%= @avgrating%>/5</h3>

<%= link_to "Create a Review For This Restaurant", review_restaurant_path(@restaurant)%>
<h3>Reviews:</h3>

  <% @restaurant.reviews.each do |review| %>
  <li><%= review.title %>, by <%= review.user.full_name%> Rating: <%= review.rating %></li>
  <li><%= review.content %></li><br>
  <% end %>

  <p>Sort by:</p>

<% if @current_user.id == @restaurant.owner_id %>
  <%=link_to 'Edit This Restaurant', edit_restaurant_path(@restaurant)%>
  <%=button_to 'Delete This Restaurant', restaurant_path(@restaurant), :method => :delete%>
<%end%>


<%= form_for @restaurant do |f| %>

    <%= f.hidden_field :owner_id, :value => @current_user.id %>
    <div class="field">
      <%= f.label :name %>
        <div class="control">
          <%= f.text_field :name %>
        </div>
    </div>
    <div class="field">
      <%= f.label :address %>
        <div class="control">
          <%= f.text_field :address %>
        </div>
    </div>
    <div class="field">
      <%= f.label :phone %>
        <div class="control">
          <%= f.text_field :phone %>
        </div>
    </div>
    <div class="field">
      <%= f.label :accepts_reservation %>
        <div class="control">
          <p><%= f.radio_button :accepts_reservation, true %>Yes</p>
          <p><%= f.radio_button :accepts_reservation, false %>No</p>
        </div>
    </div>
    <div class="field">
      <%= f.label :onsite_parking %>
        <div class="control">
          <p><%= f.radio_button :onsite_parking, true %>Yes</p>
          <p><%= f.radio_button :onsite_parking, false %>No</p>
        </div>
    </div>
    <div class="field">
      <%= f.label "Website" %>
        <div class="control">
          <%= f.text_field :url %>
        </div>
    </div>
    <p>Tell us about your restaurant. What is your approach to providing Vegetarian dishes?</p><br>
    <%= f.text_area :description %><br>
    <a class="button is-success"><%= f.submit %></a>
<% end %>

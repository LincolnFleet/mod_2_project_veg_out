<h1><%= @restaurant.name %></h1>
<h2>Menu:</h2>


<table style="width:80%">
  <tr>
    <th>Menu Item:</th>
    <th>Description:</th>
    <th>Price:</th>
    <th>Specialty:</th>
  </tr>
  <tr>
    <th>Breakfast</th>
  </tr>
    <% @menu_items.each do |item| %>
    <% if item.meal == "Breakfast" %>
    <tr>
    <th><%= link_to item.name, menu_item_path(item) %></th>
    <th><%= item.description %></th>
    <th><%= item.price %></th>
    <th><%= item.tag %></th>
    <%end%>
    <%end%>
  </tr>
  <tr>
    <th>Lunch</th>
  </tr>
    <% @menu_items.each do |item| %>
    <% if item.meal == "Lunch" %>
    <tr>

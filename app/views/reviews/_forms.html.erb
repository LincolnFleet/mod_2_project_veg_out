<%=form_for @review do |f|%>

    <%=f.hidden_field :restaurant_id, :value => @restaurant.id%>
    <%=f.hidden_field :user_id, :value => @current_user.id%>

    <%=f.label :title%><br>
    <%=f.text_field :title%><br>
    <br>
    <%=f.label :rating%><br>
    <%=f.select :rating, options_for_select([1, 2, 3, 4, 5])%><br>
    <br>
    <%=f.label :price_range%><br>
    <%=f.text_field :price_range%><br>
    <br>
    <%=f.label :content%><br>
    <%=f.text_area :content%><br>
    <br>
    <%=f.label :favorite_dish%><br>
    <%=f.collection_select(:favorite_dish, @restaurant.menu_items, :name, :name)%><br>
    <br>
    <%=f.submit "Submit Review"%>
<%end%>

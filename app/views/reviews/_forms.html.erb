<%=form_for @review do |f|%>

    <%=f.hidden_field :restaurant_id, :value => params[:restaurant][:id]%>
    <%=f.hidden_field :user_id, :value => session[:user_id]%>

    <%=f.label :title%><br>
    <%=f.text_field :title%><br>
    <br>
    # <%=f.label :rating%><br>
    # <%=collection_radio_buttons(:review, :rating, [1..5], :rating, [1..5])%><br>
    <br>
    <%=f.label :price_range%><br>
    <%=f.text_field :price_range%><br>
    <br>
    <%=f.label :content%><br>
    <%=f.text_area :content%><br>
    <br>
    <%=f.label :favorite_dish%><br>
    <%=collection_select(:review.restaurant, :review.restaurant.menu_items, :review.restaurant.menu_items, :id, :name)%><br>
    <br>
    <%=f.submit "Submit Review"%>
<%end%>

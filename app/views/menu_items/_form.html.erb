


<%= form_for @menu_item do |f| %>
<%= f.hidden_field :restaurant_id, :value => @menu_item.restaurant.id%>
<%= f.hidden_field :user_id, :value => @current_user.id%>
<div class="field">
  <%= f.label :name %>
    <div class="control">
      <%= f.text_field :name %>
    </div>
</div>
<div class="field">
  <%= f.label :price %>
    <div class="control">
      <%= f.text_field :price %>
    </div>
</div>
<div class="field">
  <%= f.label :description %>
  <div class="control">
    <%= f.text_field :description %>
  </div>
</div>
<div class="field">
  <%= f.label :meal %>
    <div class="control">
      <div class="select">
        <%= f.select :meal, "<option>Breakfast</option><option>Lunch</option><option>Dinner</option>".html_safe%>
      </div>
    </div>
</div>
<div class="field">
  <%= f.label :cuisine %>
    <div class="control">
      <div class="select">
        <%= f.collection_select(:cuisine_id, Cuisine.all, :id, :name, prompt: true) %>
      </div>
    </div>
</div>
<div class="field">
  <div class="control">
    <div class="select">
      <%= f.select :tag, "<option>Vegetarian</option><option>Vegan</option><option>Gluten Free</option><option>Includes Meat</option><option>Meat Optional</option>".html_safe %>
    </div>
  </div>
</div>
<a class="button is-success"><%= f.submit %></a>
<% end %>
